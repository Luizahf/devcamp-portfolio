<div class = "container">
  <div class="row">
    <div class="col-mf-7">
        <%= image_tag @portfolio_item.main_image %>
    </div>
    <div class="col-mf-5 portfolio-description">
        <h1><%= @portfolio_item.title %></h1>
        <hr>
        <h3><%= @portfolio_item.subtitle %></h3>
        <p><%= @portfolio_item.body %></p>
        
        <h2>Technologies Used:</h2>
        <% @portfolio_item.technologies.each do |t| %>
        <p><%= t.name %> </p>
        <% end %>
      </div>
  </div>
</div>